<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#fff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cart_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/dk_cappuccino_1"/>

    <TextView
        android:id="@+id/tv_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_cart_item"
        android:textSize="20sp"
        android:text="Cappuccino"
        android:textColor="#000"/>


    <TextView
        android:id="@+id/tv_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/iv_cart_item"
        android:textSize="18sp"
        android:text="￥19.99元"
        android:textColor="#FF673AB7"/>

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tv_cart_item_price"
        android:layout_toLeftOf="@+id/tv_amount"
        android:src="@drawable/ic_remove_circle_black_24dp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tv_cart_item_price"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/iv_add"
        android:gravity="center"
        android:textSize="16sp"
        android:text="1"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tv_cart_item_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_add_circle_black_24dp"/>

</RelativeLayout>
